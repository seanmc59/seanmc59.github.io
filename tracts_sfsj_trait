mapboxgl.accessToken = 'pk.eyJ1Ijoic2Vhbm1jNTkiLCJhIjoiY2sya2xsOWJjMXQ3cjNobzFtNHIyZnRvaiJ9._fhW0VjqPDGQ4-ekkyUdbg';

var map = new mapboxgl.Map({
container: 'map', // container id
style: 'mapbox://styles/seanmc59/ckaiwf2ii1bt41ir7tengvjvc', // stylesheet location
center: [-100, 40], // starting position [lng, lat]
zoom: 3
});

var link = document.createElement('a');
link.href = '#';
link.className = 'active';
link.textContent = 'Mean House Age 2014-2018';
link.onclick = function (e) {
  var clickedLayer = 'tracts-dta';
  var unclickLayer = 'tracts-panel';
  e.preventDefault();
  e.stopPropagation();
  this.className = 'active';
  link1.className='', link2.className='', link3.className='', link4.className='';

  map.setLayoutProperty(clickedLayer, 'visibility', 'visible');
  map.setLayoutProperty(unclickLayer, 'visibility', 'none');

  map.setPaintProperty('tracts-dta', 'fill-color',
     [
      "interpolate",
      ["linear"],
      ["get", "meanhouseage2016"],
      27.45,
      "#c406f4",
      80.34,
      "#ecb709"
    ]
  );

  updateColorScale([27.45, 80.34], ['#c406f4','#ecb709'], "Mean House Age 2014-2018");
 // updateColorScale([6.5, 27.45, 80.34, 118.5], ['#c406f4', '#c406f4', '#ecb709', '#ecb709'], "Mean House Age 2014-2018");


}
var layers = document.getElementById('menu');
layers.appendChild(link);

